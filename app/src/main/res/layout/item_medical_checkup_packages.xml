<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/MedicalCheckupPackagesByHospitalCard"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/radius_button">

<!--            <ImageView-->
<!--                android:id="@+id/imgMedicalCheckupPackagesList"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintRight_toLeftOf="@id/MedicalCheckupPackagesListTextBlog"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/MedicalCheckupPackagesListTextBlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/txtMedicalCheckupPackagesListName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myanmar3"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/font_size_m"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txtMedicalCheckupPackagesListDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myanmar3"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/font_size_m"
                    app:layout_constraintTop_toBottomOf="@id/txtMedicalCheckupPackagesListName"/>

                <TextView
                    android:id="@+id/txtMedicalCheckupPackagesListOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myanmar3"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/font_size_s"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtMedicalCheckupPackagesListDescription" />

                <TextView
                    android:id="@+id/txtMedicalCheckupPackagesListPackagePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myanmar3"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/font_size_s"
                    app:layout_constraintLeft_toRightOf="@id/txtMedicalCheckupPackagesListOriginalPrice"
                    app:layout_constraintTop_toBottomOf="@id/txtMedicalCheckupPackagesListDescription"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>