<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.recommend_suggest_write.RecommendSuggestWriteFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_evaluation"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/radius_button">

            <TextView
                android:id="@+id/TextRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* ဖြည့်သွင်းရန်လိုအပ်ပါသည်"
                android:textColor="@color/colorRed"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/edttxtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:hint="အမည်  *"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/TextRequired" />


            <EditText
                android:id="@+id/edttxtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:hint="ဖုန်းနံပါတ်"
                android:inputType="phone"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/edttxtName" />

            <EditText
                android:id="@+id/edttxtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:hint="အီးမေးလ်လိပ်စာ"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/edttxtMobileNumber" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_drop_down"
                app:layout_constraintTop_toBottomOf="@id/edttxtEmail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/edttxtWrite"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerHospital"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border_button"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/edttxtEmail" />

            <EditText
                android:id="@+id/edttxtWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="အကြံပြုထောက်ခံချက်များ *"
                android:background="@drawable/border_button"
                android:lines="12"
                android:minLines="10"
                android:maxLines="15"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerHospital" />

            <Button
                android:id="@+id/btnRecommendPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ပိုစ့်တင်မည်"
                android:textColor="@android:color/white"
                android:background="@drawable/radius_button_blue"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/edttxtWrite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>