<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.medical_checkup_packages.MedicalCheckupPackagesFragment">

    <ImageView
        android:id="@+id/imgBannerMedicalCheckupPackagesList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBannerMedicalCheckupPackagesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkBlue"
        android:textSize="@dimen/font_size_l"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/MedicalCheckupPackagesListBannerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ကျန်းမာရေးစစ်ဆေးခြင်းအစီအစဉ်များ"
        android:textColor="@color/colorDarkBlue"
        android:textSize="@dimen/font_size_m"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtBannerMedicalCheckupPackagesList"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerviewMedicalCheckupPackagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/BlueLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/blue_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>