<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <ImageView
       android:id="@+id/imgHospitalBanner"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:scaleType="centerCrop"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_evaluation"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/radius_button">

            <TextView
                android:id="@+id/txtHospitalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/font_size_l"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/LocationIcon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_map_pin"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtHospitalAddress"/>

            <TextView
                android:id="@+id/txtHospitalAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:fontFamily="@font/myanmar3"
                android:textSize="@dimen/font_size_m"
                android:layout_margin="5dp"
                app:layout_constraintHorizontal_weight="9.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalName"
                app:layout_constraintLeft_toRightOf="@id/LocationIcon"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/PhoneIcon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_phone_call"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtHospitalPhone"/>

            <TextView
                android:id="@+id/txtHospitalPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/font_size_m"
                android:layout_margin="5dp"
                app:layout_constraintHorizontal_weight="9.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalAddress"
                app:layout_constraintLeft_toRightOf="@id/PhoneIcon"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/FacebookIcon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_facebook"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalPhone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtHospitalFacebook"/>

            <TextView
                android:id="@+id/txtHospitalFacebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/font_size_m"
                android:layout_margin="5dp"
                app:layout_constraintHorizontal_weight="9.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalPhone"
                app:layout_constraintLeft_toRightOf="@id/FacebookIcon"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/MailIcon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_gmail"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalFacebook"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtHospitalMail"/>

            <TextView
                android:id="@+id/txtHospitalMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/font_size_m"
                android:layout_margin="5dp"
                app:layout_constraintHorizontal_weight="9.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalFacebook"
                app:layout_constraintLeft_toRightOf="@id/MailIcon"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/WebsiteIcon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_website"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalMail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtHospitalWebsite"/>

            <TextView
                android:id="@+id/txtHospitalWebsite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/font_size_m"
                android:layout_margin="5dp"
                app:layout_constraintHorizontal_weight="9.5"
                app:layout_constraintTop_toBottomOf="@id/txtHospitalMail"
                app:layout_constraintLeft_toRightOf="@id/WebsiteIcon"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>